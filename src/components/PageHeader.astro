---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div>
    <p></p>
    <h1>{title}</h1>
</div>

<style>
    div {
        font-family: "Open Sans", sans-serif;

        text-align: center;
        background: #e6bde5;
        min-height: 30vh;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        color: white;
    }
</style>
